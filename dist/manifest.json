{
  "manifest_version": 3,
  "permissions": [],
  "name": "Squid - Buy Button",
  "description": "Buy NFTs with Squid",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "content.js-loader.js"
      ],
      "matches": [
        "https://*:*/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": true
    }
  ]
}
