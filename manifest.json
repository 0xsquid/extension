{
  "manifest_version": 3,
  "permissions": ["storage"],
  "name": "Squid - Buy Button",
  "description": "Buy NFTs with Squid",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "serviceWorker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://*:*/*"]
    }
  ]
}
